<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ucul_edit_and_btn_view">
        <attr name="hint_text" format="string"/>
        <attr name="text_size" format="dimension"/>
        <attr name="text_color" format="color"/>
        <attr name="edit_bg" format="reference"/>
        <attr name="btn_icon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ucul_text_and_text_view">
        <attr name="title_text" format="string"/>
        <attr name="title_text_size" format="dimension"/>
        <attr name="title_text_color" format="color"/>
        <attr name="title_text_width" format="integer"/>
        <attr name="division_bg" format="color"/>
        <attr name="division_visibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="content_text" format="string"/>
        <attr name="content_text_size" format="dimension"/>
        <attr name="content_text_color" format="color"/>
    </declare-styleable>



</resources>